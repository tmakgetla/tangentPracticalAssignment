<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_employees"
        android:layout_width="match_parent"
        android:layout_height="226dp"
        android:layout_margin="@dimen/tile_margins"
        android:background="@color/blueviolet"
        android:orientation="vertical">
        <ImageView
            android:layout_weight="08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_people"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:text="@string/employees"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_statistics"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:background="@color/fuchsia"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/tile_margins"
            android:layout_marginRight="@dimen/tile_margins"
            android:layout_marginBottom="@dimen/tile_margins">
            <ImageView
                android:layout_weight="08"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_chart"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:text="@string/staticstics"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_position_data"
                android:layout_width="match_parent"
                android:layout_height="154dp"
                android:background="@color/colorPrimaryDark"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/tile_margins"
                >
                <ImageView
                    android:layout_weight="08"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_position"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:text="@string/position_data"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/ll_profile"
                    android:layout_width="126dp"
                    android:layout_height="match_parent"
                    android:background="@color/limegreen"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/tile_margins"
                    android:layout_marginTop="@dimen/tile_margins"
                    >
                    <ImageView
                        android:layout_weight="08"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_tile_profile"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:textColor="@color/white"
                        android:text="@string/profile"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/crimson"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/tile_margins"
                    android:layout_marginBottom="@dimen/tile_margins"
                    android:layout_marginRight="@dimen/tile_margins"
                    android:layout_marginLeft="@dimen/tile_margins"
                    android:visibility="invisible"
                    ></LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>